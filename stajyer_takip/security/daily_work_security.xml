<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Portal/User sadece kendi stajyerinin günlüklerini görebilir -->
        <record id="rule_stajyer_daily_work_own" model="ir.rule">
            <field name="name">Stajyer Günlük Çalışma: Kendi Kaydı</field>
            <field name="model_id" ref="model_stajyer_daily_work"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
        </record>

        <!-- Yönetici (System) tüm günlükleri görebilir -->
        <record id="rule_stajyer_daily_work_admin" model="ir.rule">
            <field name="name">Stajyer Günlük Çalışma: Yönetici Tam Erişim</field>
            <field name="model_id" ref="model_stajyer_daily_work"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>
