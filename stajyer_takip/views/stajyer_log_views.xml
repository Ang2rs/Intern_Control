<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Loglar liste görünümü -->
  <record id="view_stajyer_log_list" model="ir.ui.view">
    <field name="name">stajyer.log.list</field>
    <field name="model">stajyer.log</field>
    <field name="arch" type="xml">
      <list string="Stajyer Logları">
        <field name="tarih"/>
        <field name="name"/>
        <field name="aciklama"/>
        <field name="puan"/>
        <field name="stajyer_id"/>
      </list>
    </field>
  </record>

  <!-- Loglar form görünümü -->
  <record id="view_stajyer_log_form" model="ir.ui.view">
    <field name="name">stajyer.log.form</field>
    <field name="model">stajyer.log</field>
    <field name="arch" type="xml">
      <form string="Stajyer Log">
        <sheet>
          <group>
            <field name="tarih"/>
            <field name="name"/>
            <field name="aciklama" widget="html"/>
            <field name="puan"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_stajyer_log" model="ir.actions.act_window">
    <field name="name">Stajyer Logları</field>
    <field name="res_model">stajyer.log</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[]</field>
  </record>

</odoo>